<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:id="@+id/main"
    android:paddingEnd="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/chat_rounded_left_layout"
        android:id="@+id/bubble_layout"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="100dp">
        <TextView
            android:id="@+id/name"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"  />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="65dp">
            <RelativeLayout
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <at.markushi.ui.CircleButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cb_color="?attr/colorReact"
                    app:cb_pressedRingWidth="0dip"
                    android:tint="?attr/colorAccent"
                    android:src="@drawable/ic_play_dark_arrow"
                    android:id="@+id/playButton"
                    android:tag="Play"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center" />
                <ProgressBar
                    android:id="@+id/loadingProgressview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:indeterminateTint="?attr/colorAccent"
                    android:indeterminate="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <WoWonder.Library.MusicBar.FixedMusicBar
                    android:id="@+id/miniMusicBar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:backgroundBarPrimeColor="@color/BackgroundBarPrimeColor"
                    app:LoadedBarPrimeColor="@color/LoadedBarPrimeColor" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Duration"
                        android:textSize="11dp"
                        android:text="10:00"
                        android:layout_marginStart="5dp"
                        android:gravity="start"
                        android:layout_gravity="start" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:text="5/6/2020"
                        android:textSize="11dp"
                        android:layout_marginStart="5dp"
                        android:gravity="end"
                        android:layout_gravity="end" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>