<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="end"
    android:padding="3dp"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:paddingEnd="3dp">
    <RelativeLayout
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:background="@drawable/chat_rounded_right_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:paddingEnd="0dp">
      <ImageView
        android:id="@+id/imgDisplay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:layout_margin="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/imageplacholder" />
      <LinearLayout
        android:id="@+id/shadowLiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="6dp" 
        android:translationY="-5dp"  
        android:layout_alignParentBottom="true"
        android:background="@xml/radius_corner_shape">
        <TextView
          android:id="@+id/icon"
          android:textColor="@color/text_color_light"
          android:layout_marginEnd="0dp"
          android:textSize="12sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_alignParentBottom="true"
          android:padding="2dp"
          android:gravity="start"
          android:layout_marginStart="6dp"
          android:layout_marginTop="3dp"
          android:layout_weight="2"/>
        <TextView
          android:id="@+id/fileName"
          android:textColor="@color/text_color_light"
          android:layout_marginEnd="0dp"
          android:textSize="10sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_alignParentBottom="true"
          android:padding="2dp"
          android:gravity="start"
          android:text="6PQdMlEludmU...mp4"
          android:layout_marginStart="3dp"
          android:layout_marginTop="3dp"
          android:layout_weight="7"/>
        <TextView
          android:id="@+id/time"
          android:textColor="@color/text_color_light"
          android:layout_marginEnd="0dp"
          android:textSize="10sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_alignParentBottom="true"
          android:padding="2dp"
          android:gravity="start"
          android:text="10:00 PM"
          android:layout_marginStart="2dp"
          android:layout_marginTop="3dp"
          android:layout_weight="1"/>
        <TextView
          android:layout_height="match_parent"
          android:id="@+id/seen"
          android:textColor="@color/text_color_light"
          android:textSize="14dp"
          android:gravity="bottom|end"
          android:text="Ic"
          android:layout_marginTop="3dp"
          android:layout_marginEnd="2dp" 
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_weight="1" /> 
      </LinearLayout>
        <ProgressBar
            android:id="@+id/loadingProgressview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:visibility="invisible"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:indeterminate="true"
            android:progressBackgroundTint="@color/text_color_light"
            android:layout_centerHorizontal="true" />
      <at.markushi.ui.CircleButton
        android:id="@+id/playButton"
        android:layout_width="55dip"
        android:layout_height="55dip"
        app:cb_color="#A6000000"
        app:cb_pressedRingWidth="1dip"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="6dp"
        android:translationY="-5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play_arrow"
        android:layout_gravity="center_vertical" />
    </RelativeLayout>
</LinearLayout>