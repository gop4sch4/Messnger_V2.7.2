<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/main"
    android:paddingEnd="3dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:background="@drawable/chat_rounded_right_layout"
        android:layout_height="42dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="3dp">
        <at.markushi.ui.CircleButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cb_color="@color/text_color_light"
            app:cb_pressedRingWidth="13dip"
            android:src="@drawable/ic_play_arrow"
            android:id="@+id/playButton"
            android:tag="Play"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_gravity="center_vertical" />
        <ProgressBar
            android:id="@+id/loadingProgressview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:max="100"
            android:progress="0"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_weight="2"
            android:indeterminate="true"
            android:progressBackgroundTint="@color/text_color_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Duration"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_weight="2"
            android:textColor="@color/text_color_light"
            android:textSize="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>