<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="4dp"
    android:id="@+id/main"
    android:paddingEnd="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/chat_rounded_left_layout"
        android:id="@+id/bubble_layout"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorReact"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_weight="1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/Icontypefile"
                android:layout_height="wrap_content"
                android:textColor="@color/accent_color_dark"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fileName"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sizefileText"
                    android:layout_weight="2"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_weight="2"
                android:textColor="@color/secound_color"
                android:textSize="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>