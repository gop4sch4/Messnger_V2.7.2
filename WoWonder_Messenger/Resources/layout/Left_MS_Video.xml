
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/main"
    android:gravity="start">
    <RelativeLayout
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/chat_rounded_left_layout"
        android:layout_width="200dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/imgDisplay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"  
        android:src="@drawable/imageplacholder"
        android:adjustViewBounds="true"  />
        <TextView
            android:id="@+id/name"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_weight="1" />
              <LinearLayout
                android:id="@+id/shadowLiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:layout_alignParentBottom="true"
                android:background="@xml/radius_corner_shape">
                <TextView
                    android:id="@+id/icon"
                    android:textColor="@color/text_color_light"
                    android:layout_marginEnd="0dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="start"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/fileName"
                    android:textColor="@color/text_color_light"
                    android:layout_marginEnd="0dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="start"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="7" />
                <TextView
                    android:id="@+id/time"
                    android:textColor="@color/text_color_light"
                    android:layout_marginEnd="0dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="start"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" />
            </LinearLayout>
        <ProgressBar
            android:id="@+id/loadingProgressview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:visibility="gone"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:progressBackgroundTint="@color/text_color_light"
            android:layout_centerHorizontal="true"
            android:secondaryProgress="100"
            android:indeterminate="false" />
        <at.markushi.ui.CircleButton
          android:id="@+id/playButton"
          android:layout_width="55dip"
          android:layout_height="55dip"
          app:cb_color="#A6000000"
          app:cb_pressedRingWidth="1dip"
          android:layout_marginBottom="6dp"
          android:layout_marginEnd="1dp"
          android:layout_marginStart="1dp"
          android:translationY="-6dp"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:src="@drawable/ic_play_arrow"
          android:layout_gravity="center_vertical" />
    </RelativeLayout>
</LinearLayout>